<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ChatApp.Gui"
             xmlns:fa="http://schemas.fontawesome.io/icons/" x:Class="ChatApp.Gui.ContactControl"
             mc:Ignorable="d" d:DesignWidth="160" Height="50">
    <Grid x:Name="MainGrid"  Margin="0" Height="50" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave">
        <Grid Margin="15,0,0,0">
            <Ellipse Fill="#00B2B0" HorizontalAlignment="Left" Stroke="Transparent" Width="35" Margin="4,8,0,8"/>
            <fa:ImageAwesome Foreground="White"  HorizontalAlignment="Left" Margin="12,14,0,14" Width="23" Icon="User"/>
            <TextBlock Name="NameTextBlock" FontSize="16" Foreground="#F0F0F0" Text="Name" HorizontalAlignment="Left" Margin="44,6,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
            <TextBlock Name="UsernameTextBlock" FontSize="12" Foreground="#F0F0F0" Text="Username" HorizontalAlignment="Left" Margin="50,25,0,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</UserControl>
